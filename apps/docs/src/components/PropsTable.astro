---
/**
 * PropsTable - 显示组件 Props 的表格
 */
interface PropDef {
  name: string
  type: string
  default?: string
  description: string
  required?: boolean
}

interface Props {
  props: PropDef[]
}

const { props } = Astro.props
---

<div class="props-table-wrapper">
  <table class="props-table">
    <thead>
      <tr>
        <th>属性</th>
        <th>类型</th>
        <th>默认值</th>
        <th>说明</th>
      </tr>
    </thead>
    <tbody>
      {props.map((prop) => (
        <tr>
          <td>
            <code class="prop-name">{prop.name}</code>
            {prop.required && <span class="required">*</span>}
          </td>
          <td>
            <code class="type-annotation">{prop.type}</code>
          </td>
          <td>
            {prop.default ? (
              <code class="default-value">{prop.default}</code>
            ) : (
              <span class="no-default">-</span>
            )}
          </td>
          <td class="description">{prop.description}</td>
        </tr>
      ))}
    </tbody>
  </table>
</div>

<style>
  .props-table-wrapper {
    overflow-x: auto;
    margin: 1rem 0;
  }

  .props-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.875rem;
  }

  .props-table th {
    text-align: left;
    padding: 0.75rem;
    font-weight: 600;
    border-bottom: 2px solid var(--sl-color-gray-5);
    color: var(--sl-color-white);
  }

  .props-table td {
    padding: 0.75rem;
    border-bottom: 1px solid var(--sl-color-gray-5);
    vertical-align: top;
  }

  .prop-name {
    font-weight: 500;
    color: var(--sl-color-accent);
  }

  .required {
    color: #ef4444;
    margin-left: 0.25rem;
  }

  .type-annotation {
    font-size: 0.75rem;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    background: var(--sl-color-gray-6);
    color: var(--sl-color-accent-high);
  }

  .default-value {
    font-size: 0.75rem;
    color: var(--sl-color-gray-3);
  }

  .no-default {
    color: var(--sl-color-gray-4);
  }

  .description {
    color: var(--sl-color-gray-2);
  }
</style>
