{
  "name": "beeve",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@beeve/web --filter=@beeve/docs --filter=@beeve/storybook",
    "dev:server": "turbo run dev --filter=@beeve/server",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "biome format --write .",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @beeve/db generate",
    "db:migrate": "pnpm --filter @beeve/db migrate",
    "db:studio": "pnpm --filter @beeve/db studio"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "turbo": "^2.8.1",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=20"
  }
}
